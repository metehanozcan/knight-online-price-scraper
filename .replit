modules = ["web", "nodejs-20"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "bash railway-start.sh"]
build = ["sh", "-c", "npm run build-css-prod"]

[workflows]
runButton = "Frontend with CSS Build"

[[workflows.workflow]]
name = "Frontend Only"
author = 43432280
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "Worker Process"
author = 43432280
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node worker.js"

[[workflows.workflow]]
name = "Frontend with CSS Build"
author = 43432280
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build-css-prod"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[ports]]
localPort = 3000
externalPort = 80
